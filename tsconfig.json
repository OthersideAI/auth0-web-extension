{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {},

    "strict": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"]
}
