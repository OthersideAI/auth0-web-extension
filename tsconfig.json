{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "es6", "dom.iterable"],

    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "isolatedModules": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {},

    "strict": true,
    "alwaysStrict": true,
    "noUncheckedIndexedAccess": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["__tests__/", "dist/types", "**/__mocks__/**"]
}
